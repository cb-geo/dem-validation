variable	name string rollingPart

thermo_modify	flush yes lost warn

units		si

###############################################
# Particle parameters
################################################

variable	min_rad equal 0.1

variable 	sk equal ${min_rad}

variable	coeffRes equal 0.1
variable	coeffFric equal 1.732050808

variable	kn equal 5*10^5
variable	kt equal 10^5
#variable	kt equal 0.2*${kn}

variable	gravity equal 9.81
variable	density equal 1200.0

variable	min_mass equal ${density}*4.0/3.0*PI*${min_rad}*${min_rad}*${min_rad}
variable	a equal (-2.0*log(${coeffRes})/PI)^2
variable        gamma_n equal sqrt($a*2*${kn}/${min_mass}/(1+0.25*$a))
variable        gamma_t equal ${gamma_n}*0.5

variable	tcol equal PI/sqrt(2*${kn}/${min_mass}-${gamma_n}/4.0)

variable	dt equal 0.0001
#variable	dt equal ${tcol}*0.002
timestep	${dt}

###############################################

variable	dumpfreq equal 1
variable	logfreq equal 100

newton 		on
atom_style	sphere

boundary	f f f

region		boxreg block 0 2000 -1 1 -1 1
create_box	1 boxreg

######### No viscoelastic damping for nornal nor tangential forces #########

pair_style	gran/hooke/history &
		${kn} ${kt} 0.5 0.5 ${coeffFric} 0

#pair_style	gran/hooke/history &
#		${kn} ${kt} 0 0 0 0

pair_coeff	* *

neighbor        ${sk} bin
thermo 		${logfreq}
comm_modify 	mode multi group all vel yes

################## Spheres creation and their properties ####################

variable	theta equal (step/400000)*2*PI

create_atoms 	1 single 0 0 ${min_rad}

set 		atom 1 diameter 0.2

set 		atom 1 density ${density}

group		group1 id 1

fix		pl all wall/gran hooke/history ${kn} ${kt} 0.5 0.5 ${coeffFric} 0 zplane 0 NULL

fix		grav group1 gravity ${gravity} vector 0.7071067812 0 -0.7071067812

fix		1 all nve/sphere

dump		1 all custom ${dumpfreq} ${name}_hooke.dump &
		id type radius x y z tqx tqy tqz fx fy fz

#dump		1 all custom ${dumpfreq} ${name}_hooke.dump &
#		id type radius x y z omegay vx vy vz tqy fx fy fz

thermo_style	custom step cpu atoms ke

run		284100
